        "beforeDevCommand": "pnpm dev",
        "beforeBuildCommand": "pnpm build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist"
    },
    "package": {
        "productName": "anidl-gui",
        "version": "1.2.2"
    },
    "tauri": {
        "allowlist": {
            "all": true,
            "shell": {
                "all": false,
                "open": true
            },
            "notification": {
                "all": true
            }
        },
        "windows": [{
            "title": "Zero's Anime Downloader",
            "width": 1300,
            "height": 800
        }],
        "security": {
            "csp": null
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "com.anidl-gui.app",
            "icon": [
                "icons/icon.icns",
                "icons/icon.ico"
            ]
        },
        "updater": {
            "active": true,
            "endpoints": [
                "https://github.com/zerodev-exe/anidl-gui/releases/latest/download/latest.json"
            ],
            "dialog": true,
